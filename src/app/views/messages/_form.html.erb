
<% message = Message.new %>
<%= form_with model: message, url: create_message_path do |form| %>
  <%= render "shared/error_messages", instead: message %>
  <%= form.label :kind, style: "display: block" %>
  <%= form.text_field :kind %>
  <%= form.label :content, style: "display: block" %>
  <%= form.text_area :content %>
  <%= form.submit %>
<% end %>