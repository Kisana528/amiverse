<nav>
  <div>
    <% if logged_in? %>
      <% if current_account.icon.attached? %>
        <%= link_to image_tag(show_icon_path(current_account.name_id), class: 'nav-account-icon'), account_path(current_account.name_id) %>
      <% else %>
        <%= image_tag 'icon.webp', class: 'nav-account-icon' %>
      <% end %>
    <% else %>
      <%= link_to image_tag('icon.webp', class: 'nav-account-icon'), login_path%>
    <% end %>
  </div>
  <div>
    <% if logged_in? %>
      <%= link_to('@' + current_account.name_id, account_path(current_account.name_id)) %>
      <%= button_to("Log out", logout_path, method: :delete) %>
    <% else %>
      <%= link_to("Log in", login_path) %>
    <% end %>
  </div>
</nav>