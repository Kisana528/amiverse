<%= form_with model: @invitation, url: yield(:form_url), data: { turbo: false } do |f| %>
  <%= render 'shared/error_messages', instead: @invitation %>
  <br/>
  <%= f.label :name, '名前', class: '' %>
  <%= f.text_field :name, class: '' %>
  <br/>
  <%= f.label :code, 'コード', class: '' %>
  <%= f.text_field :code, class: '' %>
  <br/>
  <%= f.label :max_uses, '使用回数上限' %>
  <%= f.number_field :max_uses %>
  <br/>
  <%= f.label :expires_at, '期限' %>
  <%= f.datetime_field :expires_at %>
  <br/>
  <%= f.submit '作成' %>
<% end %>