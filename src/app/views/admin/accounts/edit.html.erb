<%= form_with model: @account, url: admin_update_account_path do |f| %>
  <%= render 'shared/account_error_messages' %>
  <%= f.label :icon, 'アイコン' %>
  <%= f.file_field :icon %>
  <br/>
  <%= f.label :banner, 'バナー' %>
  <%= f.file_field :banner %>
  <br/>
  <%= f.label :authenticated, 'authenticated' %>
  <%= f.select :authenticated, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :public_visibility, 'public_visibility' %>
  <%= f.select :public_visibility, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :activated, 'activated' %>
  <%= f.select :activated, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :administrator, 'administrator' %>
  <%= f.select :administrator, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :moderator, 'moderator' %>
  <%= f.select :moderator, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :nsfw, 'nsfw' %>
  <%= f.select :nsfw, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :explorable, 'explorable' %>
  <%= f.select :explorable, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :locked, 'locked' %>
  <%= f.select :locked, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :silenced, 'silenced' %>
  <%= f.select :silenced, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :suspended, 'suspended' %>
  <%= f.select :suspended, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :frozen, 'frozen' %>
  <%= f.select :frozen, [['F',false],['T',true]] %>
  <br/>
  <%= f.label :deleted, 'deleted' %>
  <%= f.select :deleted, [['F',false],['T',true]] %>
  <br/>
  <div class="text-field-group">
    <%= f.text_field :name, class: 'text-field-field', placeholder: '名前' %>
    <%= f.label :name, '名前', class: 'text-field-label' %>
  </div>
  <br/>
  <div class="text-field-group">
    <%= f.text_field :name_id, class: 'text-field-field', placeholder: 'ID' %>
    <%= f.label :name_id, 'ID', class: 'text-field-label' %>
  </div>
  <br/>
  <div class="text-field-group">
    <%= f.text_field :bio, class: 'text-field-field', placeholder: '紹介' %>
    <%= f.label :bio, '紹介', class: 'text-field-label' %>
  </div>
  <br/>
  <div class="text-field-group">
    <%= f.text_field :location, class: 'text-field-field', placeholder: '場所' %>
    <%= f.label :location, '場所', class: 'text-field-label' %>
  </div>
  <br/>
  <%= f.label :birthday, '誕生日' %>
  <%= f.datetime_field :birthday %>
  <br/>
  <div class="text-field-group">
    <%= f.password_field :password, class: 'text-field-field', placeholder: 'パスワード' %>
    <%= f.label :password, 'パスワード', class: 'text-field-label' %>
  </div>
  <br/>
  <div class="text-field-group">
    <%= f.password_field :password_confirmation, class: 'text-field-field', placeholder: 'パスワード確認' %>
    <%= f.label :password_confirmation, 'パスワード確認', class: 'text-field-label' %>
  </div>
  <br/>
  <%= f.submit '更新' %>
<% end %>