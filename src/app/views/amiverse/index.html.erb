<% provide(:main_header_text, 'Amiverse API v0.1') %>
<% content_for :main_content do %>
  <div class='amiverse-index-container'>
    <% if @current_account %>
      <% if @current_account.administrator %>
        <div class='amiverse-index-box'>
          ADMIN PAGE
          <br />
          <%= link_to '管理画面', admin_root_path %>
          <br />
          ストレージ容量(利用中/利用可能)
          <%= @current_account.storage_size %>/
          <%= @current_account.storage_max_size %>
        </div>
      <% end %>
      <div id="items">
        <% @items.each do |item| %>
          <%= render 'shared/item_account', item: item, reactions: @reactions %>
        <% end %>
      </div>
    <% else %>
      <div class='amiverse-index-box'>
        Amiverseにはフロントエンドアプリがあります。
        <br />
        <a href='https://amiverse.net/'>amiverse.net</a>
        <br />
        このバックエンドアプリでは表示が簡素なものになっています。
      </div>
      <div class='amiverse-index-box'>
        このサイトからご利用の場合。
        <br />
        <%= link_to 'ログイン', login_path %>
        <br />
        <%= link_to 'サインアップ', signup_path %>
      </div>
      <div class='amiverse-index-box'>
        その他の情報
        <ul>
          <li><%= link_to 'Amiverseについて', about_path %></li>
          <li><%= link_to '情報', info_path %></li>
          <li><%= link_to 'お困り', help_path %></li>
          <li><%= link_to '運営方針', policy_path %></li>
          <li><%= link_to '免責事項', disclaimer_path %></li>
          <li><%= link_to 'サイトマップ', sitemap_path %></li>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>
<%= render 'shared/default_layout' %>